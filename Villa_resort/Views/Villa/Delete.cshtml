@model Villa_resort.Domain.Entities.VillaModel

<div class="w-100 card  border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="text-white py-2">
                    Delete Villa
                </h2>
            </div>
        </div>

    </div>
    <div class="card-body border py-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div asp-validation-summary="None"></div>
                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Name" disabled class="form-control border shadow" placeholder="Name" />
                        <label asp-for="Name" class="ms-2"></label>
                        
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Description" disabled class="form-control border shadow" placeholder="Description" />
                        <label asp-for="Description" class="ms-2"></label>
                 
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Price" disabled class="form-control border shadow" placeholder="Price" />
                        <label asp-for="Price" class="ms-2"></label>
                        
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Sqft" disabled class="form-control border shadow" placeholder="Sqft" />
                        <label asp-for="Sqft" class="ms-2"></label>
           
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Occupancy" disabled class="form-control border shadow" placeholder="Occupancy" />
                        <label asp-for="Occupancy" class="ms-2"></label>
           
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="ImageUrl" disabled class="form-control border shadow" placeholder="ImageUrl" />
                        <label asp-for="ImageUrl" class="ms-2"></label>
                
                    </div>
                </div>

                <div class="row pt-2 justify-content-center">
                    <div class="col-auto d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-success bg-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                        <a class="btn btn-danger bg-transparent" asp-action="Index">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>


            </div>
        </form>

    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}



