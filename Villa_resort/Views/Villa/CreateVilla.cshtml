@model Villa_resort.Domain.Entities.VillaModel

<div class="w-100 card  border-0 p-4">
<div class="card-header bg-success bg-gradient ml-0 py-3">

    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="text-white py-2">
            Create Villa 
        </h2>
        </div>
    </div>

</div>
<div class="card-body border py-4">
    <form method="post" class="row">
        <div class="p-3">
            <div asp-validation-summary="None"></div>
                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Name" class="form-control border shadow" placeholder="Name" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Description" class="form-control border shadow" placeholder="Description" />
                        <label asp-for="Description" class="ms-2"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Price" class="form-control border shadow" placeholder="Price" />
                        <label asp-for="Price" class="ms-2"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Sqft" class="form-control border shadow" placeholder="Sqft" />
                        <label asp-for="Sqft" class="ms-2"></label>
                        <span asp-validation-for="Sqft" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Occupancy" class="form-control border shadow" placeholder="Occupancy" />
                        <label asp-for="Occupancy" class="ms-2"></label>
                        <span asp-validation-for="Occupancy" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="ImageUrl" class="form-control border shadow" placeholder="ImageUrl" />
                        <label asp-for="ImageUrl" class="ms-2"></label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>

               @*  <div class="row pt-2 align-content-center">
                    <div class="col-lg-6 col-md-3">
                        <button type="submit" class="btn btn-success bg-success">
                            <i class="bg-info bi-check-circle"></i>Create
                        </button>
                    </div>
                    <div class="col-lg-6 col-md-3">
                        <a class="btn btn-danger bg-danger" asp-action="Index">
                            <i class="bi bi-x-circle"></i>Cancel
                        </a>
                    </div>
                </div> *@

                <div class="row pt-2 justify-content-center">
                    <div class="col-auto d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-success bg-success">
                            <i class="bg-info bi-check-circle"></i> Create
                        </button>
                        <a class="btn btn-danger bg-danger" asp-action="Index">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>

          
        </div>
    </form>

</div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}


