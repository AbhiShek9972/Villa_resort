@model IEnumerable<Villa_resort.Domain.Entities.VillaNumber>

@* <h1>Villa Details</h1> *@

<div class="w-100 card  border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">

        <div class="row">
            <div class="text-white py-2">
                Villa Details
            </div>

        </div>

    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-secondary">
                    <i class="bi bi-plus-square"></i>
                    Create New VillaNumber
                </a>
            </div>

        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        VillaName
                    </th>
                    <th>
                       VillaNumber
                    </th>
                    <th>
                        SpecialDetails
                    </th>
                   @*  <th>
                        Occupancy
                    </th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var Villa in Model)
                {
                    <tr>
                        <td>
                            @Villa.VillaID
                        </td>
                        <td>
                            @Villa.villaNumber
                        </td>
                        <td>
                            @Villa.SpecialDetails
                        </td>
                       @*  <td>
                            @villa.Occupancy
                        </td> *@
                        <td>
                            <div class="w-100 btn btn-group" role="group">
                                <a asp-controller="VillaNumberController" asp-action="Update" asp-route-VillaNumberID="@Villa.villaNumber"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square">Edit</i>
                                    <a asp-controller="VillaNumberController" asp-action="Delete" asp-route-VillaNumberID="@Villa.villaNumber"
                                       class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill">Delete</i>
                                    </a>
                                </a>
                            </div>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

